<script type="text/javascript">
        $(document).ready(function () {
            var ArtistsAlbum = $('#albums-api');
            $.ajax({
                    type: 'GET',
                    url: 'http://api-music.azurewebsites.net/api/artists?first_name=will.i.am&last_name=null',
                    dataType: 'jsonp',
                    success: function (data) {
                        $.each(data, function (index, val) {
                            var albumNumbers = val.NumberOfAlbums;
                            ArtistsAlbum.append(albumNumbers);
                        });
                    }
                });           
        }
        );
</script>
